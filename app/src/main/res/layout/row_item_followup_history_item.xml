<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.cardview.widget.CardView
        android:layout_marginTop="16dp"
        android:elevation="7dp"
        app:contentPadding="7dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            android:paddingRight="5dp"
            android:paddingLeft="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/followupDate"
                android:layout_marginTop="5dp"
                app:layout_constraintStart_toStartOf="parent"
                android:textColor="@color/black"
                android:textSize="16sp"
                tools:text="Followup Date: "
                android:fontFamily="@font/avenir_heavy"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/confChance"
                android:layout_marginTop="5dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginRight="18dp"
                android:gravity="center|left"
                app:layout_constraintHorizontal_bias="0.0"
                android:textColor="@color/black"
                tools:text="Confirmation Chance: "
                android:drawablePadding="5dp"
                android:ellipsize="end"
                android:fontFamily="@font/avenir_medium"
                app:layout_constraintTop_toBottomOf="@+id/followupDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/ammendDate"
                android:layout_marginTop="5dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginRight="18dp"
                android:gravity="center|left"
                app:layout_constraintHorizontal_bias="0.0"
                android:textColor="@color/black"
                tools:text="Amendment Date: "
                android:ellipsize="end"
                android:drawablePadding="5dp"
                android:fontFamily="@font/avenir_medium"
                app:layout_constraintTop_toBottomOf="@+id/confChance"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvNotes"
                android:layout_marginTop="5dp"
                app:layout_constraintStart_toStartOf="parent"
                android:textColor="@color/black"
                tools:text="Notes: "
                android:drawablePadding="5dp"
                android:fontFamily="@font/avenir_book"
                app:layout_constraintTop_toBottomOf="@+id/ammendDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</layout>